@using CSSPWebTools.Views.Home.Resources;
@using CSSPModelsDLL.Models;

@{
    List<ContactModel> AdminContactModelList = (List<ContactModel>)ViewBag.AdminContactModelList;
}

<div class="container">
    <br />
    <br />
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h4 class="panel-title">@HomeViewRes.PermissionRequiredToGetAccess</h4>
                </div>
                <div class="panel-body">
                    <h4 title="@HomeViewRes.CSSP_FULL">
                        @HomeViewRes.CSSPWebTools:<span class="elementSpacing text-uppercase">@HomeViewRes.PermissionRequiredToGetAccess</span>
                    </h4>
                    <br />
                    <div class="blockMargin">
                        <dl>
                            <dt>@HomeViewRes.YourStatus: </dt>
                            <dd><span class="blockMargin">@HomeViewRes.YouCurrentlyDoNotHavePermission </span> </dd>
                        </dl>
                        <dl>
                            <dt>@HomeViewRes.GetPermission:</dt>
                            <dd><span class="blockMargin">@HomeViewRes.ToHaveAccess</span></dd>
                        </dl>
                    </div>
                </div>
                <div class="panel-footer">
                    <ul class="list-inline">
                        @foreach (ContactModel acm in AdminContactModelList)
                        {
                            <li>
                                <a href="mailto:@acm.LoginEmail" class="btn btn-link" role="button">@acm.FirstName @acm.LastName</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
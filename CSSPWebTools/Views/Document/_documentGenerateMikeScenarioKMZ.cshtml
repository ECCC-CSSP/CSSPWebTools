@using CSSPWebTools.Views.Document.Resources;
@using CSSPWebTools.Controllers;
@using CSSPEnumsDLL.Enums;
@using CSSPEnumsDLL.Services;
@using CSSPModelsDLL.Models;

@{
    DocumentController documentController = (DocumentController)ViewBag.DocumentController;
    int ReportTypeID = (int)ViewBag.ReportTypeID;
    int TVItemID = (int)ViewBag.TVItemID;
    int TVFileTVItemID = (int)ViewBag.TVFileTVItemID;
    ReportTypeModel reportTypeModel = (ReportTypeModel)ViewBag.ReportTypeModel;
}

@if (TVFileTVItemID == 0)
{
    <ul class="GenerateReportTopDiv BorderOtherInfrastructure list-unstyled">
        <li>
            <form class="GenerateReport" method="post" role="form" action="Document/DocumentGenerateJSON">
                @Html.AntiForgeryToken()
                <fieldset>
                    <input type="hidden" name="TVItemID" value="@TVItemID" />
                    <input type="hidden" name="ReportTypeID" value="@ReportTypeID" />
                    @Parameters(reportTypeModel.UniqueCode)
                    <div class="form-group">
                        <button class="jbDocumentGenerate btn btn-primary" type="submit">
                            <span class="glyphicon glyphicon-check"></span>
                            &nbsp;@DocumentViewRes.GenerateReportWithParameters
                        </button>
                    </div>
                </fieldset>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="list-unstyled">
        <li>
            @Parameters(reportTypeModel.UniqueCode)
        </li>
    </ul>
}

@helper Parameters(string UniqueCode)
{
    switch (UniqueCode)
    {
        case "MikeScenarioBoundaryConditionsKMZ":
            {
                <legend>
                    <span>@DocumentViewRes.Parameters</span>
                    <button class="jbHelpDocShowDialog btn btn-link" data-dockey="documentparametersformikescenarioboundaryconditionskmz" data-title="@DocumentViewRes.Parameters @DocumentViewRes.For @DocumentViewRes.BoundaryConditions"><span class="glyphicon glyphicon-info-sign"></span></button>
                </legend>
                <span>@DocumentViewRes.NoParameters</span>
                <button class="jbHelpDocShowDialog btn btn-link" data-dockey="documentmikescenariokmlnoparameters" data-title="@DocumentViewRes.NoParameters"><span class="glyphicon glyphicon-info-sign"></span></button>
            }
            break;
        case "MikeScenarioMeshKMZ":
            {
                <legend>
                    <span>@DocumentViewRes.Parameters</span>
                    <button class="jbHelpDocShowDialog btn btn-link" data-dockey="documentparametersformikescenariomeshkmz" data-title="@DocumentViewRes.Parameters @DocumentViewRes.For @DocumentViewRes.Mesh"><span class="glyphicon glyphicon-info-sign"></span></button>
                </legend>
                <span>@DocumentViewRes.NoParameters</span>
                <button class="jbHelpDocShowDialog btn btn-link" data-dockey="documentmikescenariokmlnoparameters" data-title="@DocumentViewRes.NoParameters"><span class="glyphicon glyphicon-info-sign"></span></button>
            }
            break;
        case "MikeScenarioStudyAreaKMZ":
            {
                <legend>
                    <span>@DocumentViewRes.Parameters</span>
                    <button class="jbHelpDocShowDialog btn btn-link" data-dockey="documentparametersformikescenariostudyareakmz" data-title="@DocumentViewRes.Parameters @DocumentViewRes.For @DocumentViewRes.StudyArea"><span class="glyphicon glyphicon-info-sign"></span></button>
                </legend>
                <span>@DocumentViewRes.NoParameters</span>
                <button class="jbHelpDocShowDialog btn btn-link" data-dockey="documentmikescenariokmlnoparameters" data-title="@DocumentViewRes.NoParameters"><span class="glyphicon glyphicon-info-sign"></span></button>
            }
            break;
        case "MikeScenarioPollutionLimitKMZ":
            {
                <legend>
                    <span>@DocumentViewRes.Parameters</span>
                    <button class="jbHelpDocShowDialog btn btn-link" data-dockey="documentparametersformikescenariopollutionlimitkmz" data-title="@DocumentViewRes.Parameters @DocumentViewRes.For @DocumentViewRes.PollutionLimit"><span class="glyphicon glyphicon-info-sign"></span></button>
                </legend>
                <div class="form-inline">
                    <label>
                        <span>@DocumentViewRes.ContourValues</span>

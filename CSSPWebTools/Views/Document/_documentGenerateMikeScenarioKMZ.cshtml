                    <input type="checkbox" name="Layers" value="8" class="form-control">&nbsp;&nbsp;<span>8</span>&nbsp;&nbsp;
                    <input type="checkbox" name="Layers" value="9" class="form-control">&nbsp;&nbsp;<span>9</span>&nbsp;&nbsp;
                    <input type="checkbox" name="Layers" value="10" class="form-control">&nbsp;&nbsp;<span>10</span>&nbsp;&nbsp;
                    <br />

                    </label>
                </div>
            }
            break;
        case "MikeScenarioCurrentsAnimationKMZ":
            {
                <legend>
                    <span>@DocumentViewRes.Parameters</span>
                    <button class="jbHelpDocShowDialog btn btn-link" data-dockey="documentparametersformikescenariocurrentsanimationkmz" data-title="@DocumentViewRes.Parameters @DocumentViewRes.For @DocumentViewRes.CurrentsAnimation"><span class="glyphicon glyphicon-info-sign"></span></button>

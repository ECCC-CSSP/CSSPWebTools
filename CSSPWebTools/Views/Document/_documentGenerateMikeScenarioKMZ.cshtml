                    </label>
                </div>
            }
            break;
        case "MikeScenarioPollutionAnimationKMZ":
            {
                <legend>
                    <span>@DocumentViewRes.Parameters</span>
                    <button class="jbHelpDocShowDialog btn btn-link" data-dockey="documentparametersformikescenariopollutionanimationkmz" data-title="@DocumentViewRes.Parameters @DocumentViewRes.For @DocumentViewRes.PollutionAnimation "><span class="glyphicon glyphicon-info-sign"></span></button>
                </legend>
                <div class="form-inline">
                    <label>
                        <span>@DocumentViewRes.ContourValues</span>
